<p id="notice"><%= notice %></p>

<h1>Welcome to TheDenied.com, <%= @current_user.username %>!</h1>

<div class="cards">
<% @posts.each do |post|%>
  <div class="card">
    <p><%= post.content %></p>
    <%= form_for @like do |f| %>
      <%=f.hidden_field :post_id, value: post.id %>
      <%=f.submit "👍  #{post.likes.size}"%>
    <% end %>
  </div>

<% end %>
</div>


<%= link_to 'New Post', new_post_path %>
