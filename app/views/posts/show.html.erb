<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p><strong>Likes: <%= @post.like_count %></strong></p>

<%= form_for @like do |f| %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.submit "Like this Post" %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
